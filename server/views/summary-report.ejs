<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PDF Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }
        h1 {
            text-align: center;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .table th {
            background-color: #4F81BD;
            color: white;
        }
        .table td {
            background-color: #f9f9f9;
            font-size: 12px;
        }
        .footer {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <h2>Complete Task Report</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Timestamp</th>
                <th>Project Title</th>
                <th>Severity</th>
                <th>Module</th>
                <th>From Date - To Date</th>
            </tr>
        </thead>
        <tbody>
            <% if (tableData.length > 0) { %>
                <% tableData.forEach(function(item, index) { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item.taskName %></td>
                        <td><%= item.taskStatus %></td>
                        <td><%= new Date(item.statusTimestamp).toLocaleString() %></td>
                        <td><%= item.projectTitle %></td>
                        <td><%= item.severity %></td>
                        <td><%= item.module %></td>
                        <td><%= item.taskStartDate %> - <%= item.taskEndDate %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="8" style="text-align: center;">No Report Found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
